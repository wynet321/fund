<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration>
  <appender class="ch.qos.logback.core.ConsoleAppender"
    name="STDOUT">
    <encoder>
      <pattern>%date{HH:mm:ss.SSS}[%-5level]%-40thread|%-40logger|%msg%n</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>DEBUG</level>
    </filter>
    <target>System.out</target>
  </appender>
  <appender class="ch.qos.logback.core.ConsoleAppender"
    name="STDERR">
    <encoder>
      <pattern>%date{HH:mm:ss.SSS}[%-5level]%-40thread|%-40logger|%msg%n</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>WARN</level>
    </filter>
    <target>System.err</target>
  </appender>

  <appender class="ch.qos.logback.core.rolling.RollingFileAppender"
    name="FILE">
    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS}[%-5level]%-40thread|%-40logger|%msg%n</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>INFO</level>
    </filter>
    <file>logs/service.log</file>
    <rollingPolicy
      class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      rollover daily
      <fileNamePattern>logs/service.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
      <maxFileSize>100MB</maxFileSize>
      <maxHistory>10</maxHistory>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <logger additivity="false" level="debug" name="net.canglong">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="STDERR"/>
    <appender-ref ref="FILE"/>
  </logger>

  <root>
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="STDERR"/>
    <appender-ref ref="FILE"/>
  </root>

</configuration>