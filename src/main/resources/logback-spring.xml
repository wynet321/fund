	<!-- <springProfile name="development | staging"> -->
	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<!-- <filter -->
		<!-- class="com.zuora.sunburst.logging.logback.filter.ZLevelRangeFilter"> -->
		<!-- <lowerLevel>ALL</lowerLevel> -->
		<!-- <upperLevel>INFO</upperLevel> -->
		<!-- <onMismatch>DENY</onMismatch> -->
		<!-- </filter> -->
		<encoder>
			<pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%-24thread]
				[%-40logger{36}] - %msg%n</pattern>
		</encoder>
		<target>System.out</target>
	</appender>
	<appender name="STDERR"
		class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>WARN</level>
		</filter>
		<encoder>
			<pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%-24thread]
				[%-40logger{36}] - %msg%n</pattern>
		</encoder>
		<target>System.err</target>
	</appender>

