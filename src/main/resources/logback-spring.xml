	<logger name="net.cheetahead" level="INFO" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="STDERR" />
	</logger>

	<root level="WARN">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="STDERR" />
	</root>
